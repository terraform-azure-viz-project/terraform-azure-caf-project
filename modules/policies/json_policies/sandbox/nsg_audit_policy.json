{
  "properties": {
    "policyType": "Custom",
    "mode": "All",
    "description": "Audits network security groups for open ports in sandbox subscriptions.",
    "metadata": {
      "version": "1.0.0",
      "category": "Regulatory Compliance",
      "hipaa_control": "164.312(c)(1)"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/networkSecurityGroups"
          },
          {
            "field": "Microsoft.Network/networkSecurityGroups/securityRules[*].access",
            "equals": "Allow"
          },
          {
            "field": "Microsoft.Network/networkSecurityGroups/securityRules[*].destinationPortRange",
            "contains": "3389"
          }
        ]
      },
      "then": {
        "effect": "Audit"
      }
    }
  }
}
